{
  "manifest_version": 3,
  "name": "LinkedIn Profile Opener",
  "version": "3.0",
  "description": "Open LinkedIn Profiles",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ]
}
